<%= form_for(@film) do |f| %>
	<div class="field">
		<%= f.text_area :name, placeholder: "Name" %>
	</div>
	<div class="field">
		<%= f.text_area :content, placeholder: "Content" %>
	</div>
		<%= f.submit "Post", class: "btn btn-primary" %>
	<span class="image">
		<%= f.file_field :image %>
	</span>
<% end %>